# unisonbox-server
#
# $1 - preference file in ~/.unison 
# $2 - client username 
# $3 - client ip address 
# $4 - email address for notification
#
# e.g. /usr/local/bin/unisonbox-server unisonbox.prf client-username client-ip notification-email

export PATH=/usr/local/bin:$PATH

if ping -c1 $3 > /dev/null
then
  if unison $1 $HOME/UnisonBox ssh://$2@$3/UnisonBox 
  then
    echo "Success: notifying"
    echo "Files All Updated Succesfully" | terminal-notifier -title "UnisonBox" 
  else
    echo "Error: notifying and mailing"
    echo Unison Failed: Check //$(hostname)/tmp/homebrew.mxcl.unisonbox-server.err | terminal-notifier -title "UnisonBox" 
    echo Unison Failed: Check //$(hostname)/tmp/homebrew.mxcl.unisonbox-server.err | mail -s "UnisonBox Failed "  $4 
  fi
else
  echo $3 is unavailable | mail -s "UnisonBox Sync Failed " 
fi
